{
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "pinDigests": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["versions.json"],
      "matchStrings": [
        "(?<depName>debian):(?<currentValue>\\d+).*"
      ],
      "autoReplaceStringTemplate": "{{{depName}}}:{{{newValue}}}@{{{newDigest}}}",
      "datasourceTemplate": "docker"
    }
  ]
}
