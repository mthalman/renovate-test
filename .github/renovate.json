{
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "versioning": {
    "buildtoolsPrereqsCustomVersion": {
      "description": "Custom versioning for Docker tags with embedded versions",
      "regex": "\\D+-(?<major>\\d+)(\\.(?<minor>\\d+)?-\\S+",
      "type": "version"
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["UnitTests.proj"],
      "matchStrings": [
        "mcr.microsoft.com/dotnet-buildtools/prereqs:\\D+-(?<currentValue>\\d+(\\.\\d+)?)(-\\S+)?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "mcr.microsoft.com/dotnet-buildtools/prereqs",
      "versioningTemplate": "buildtoolsPrereqsCustomVersion"
    }
  ]
}
